{
  "version": 2,
  "buildCommand": "cd backend && npm ci && npm run build",
  "installCommand": "cd backend && npm ci",
  "builds": [
    {
      "src": "backend/dist/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "backend/dist/index.js"
    }
  ]
}